@model IEnumerable<OnlineBookingApp.Models.Booking.Hotel>

<h1>Hotel List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Hotel Booking</a>
</p>

<form method="get" action="@Url.Action("Index")">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="searchTerm">Search:</label>
            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" />
        </div>
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hotel in Model)
        {
            <tr>
                <td>@hotel.Name</td>
                <td>@hotel.Location</td>
                <td>$@hotel.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@hotel.HotelId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@hotel.HotelId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@hotel.HotelId">Delete</a> |
                    <a asp-action="BookingConfirmation" asp-route-id="@hotel.HotelId">Book</a> 
                    
                </td>
            </tr>
        }
    </tbody>
</table>
