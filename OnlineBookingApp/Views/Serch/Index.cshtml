@model OnlineBookingApp.Models.Booking.Flight

<h2>Search Flight</h2>

<form asp-controller="Flight" asp-action="Index" method="get">
    <div class="form-group">
        <label asp-for="Airline">Airline</label>
        <input type="text" class="form-control" name="airline">
    </div>
    <div class="form-group">
        <label asp-for="ArrivalTime" class="control-label">Arrival Time</label>
        <input asp-for="ArrivalTime" class="form-control" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>
