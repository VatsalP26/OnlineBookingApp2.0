@model IEnumerable<OnlineBookingApp.Models.Booking.Flight>

<h1>Flights List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<form method="get" action="@Url.Action("Index")">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="searchTerm">Search:</label>
            <input type="text" class="form-control" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" />
        </div>
        <div class="form-group col-md-3">
            <button type="submit" class="btn btn-primary">Search</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Clear</a>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Airline</td>
                <td>@item.DepartureTime</td>
                <td>@item.ArrivalTime</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.FlightId">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.FlightId">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.FlightId">Delete</a> |
                    <a asp-action="BookingConfirmation" asp-route-id="@item.FlightId">Book</a>

                </td>
            </tr>
        }
    </tbody>
</table>
