@{
}
@model OnlineBookingApp.Models.Booking.CarRental

<h2>Delete Car Rental Booking</h2>

<div class="alert alert-danger" role="alert">
    <p>Are you sure you want to delete this car rental?</p>
    <p>Model: @Model.CarModel</p>
    <p>Company: @Model.RentalCompany</p>
    <p>Price: @Model.Price</p>
   
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CarRentalId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
